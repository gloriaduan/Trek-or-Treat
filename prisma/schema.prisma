generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  clerkUserId String   @unique
  username    String   @unique
  avatar      String
  createdAt   DateTime @default(now())
}

model Location {
  id          String   @id @default(cuid())
  address     String
  description String
  latitude    Float
  longitude   Float
  images      Image[]
  createdAt   DateTime @default(now())
}

model Image {
  id       String   @id
  url      String
  name     String
  location Location @relation(fields: [locationId], references: [id])
  locationId String
}